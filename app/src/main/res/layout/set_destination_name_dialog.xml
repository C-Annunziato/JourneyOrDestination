<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/set_destination_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:maxLength="15"
        app:counterMaxLength="15"
        android:background="#415A70"
        app:counterEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:switchTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/destination_text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#52728E"
            android:hint="@string/name_of_destination"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>
</layout>