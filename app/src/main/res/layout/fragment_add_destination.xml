<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="40dp"
        tools:context=".view.AddDestinationFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/first_text_field"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:switchTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/your_location_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Your Location"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/second_text_field"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:switchTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_text_field">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/destination_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Your Destination"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>
        \
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
